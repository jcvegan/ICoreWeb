@model ICoreWebApp.Core.Web.Areas.Identity.Models.Permissions.CreateModel
@{
    Layout = "_Layout";
}
<vc:title header="Create Permission"></vc:title>
<div class="ks-page-content">
    <div class="ks-page-content-body">
        <div class="ks-nav-body-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6 col-xl-6 col-md-9 col-sm-12 col-xs-12 ks-panels-column-section">
                        <div class="card">
                            <div class="card-block">
                                <h5 class="card-title">Create Permisssion</h5>
                                <form method="post" asp-action="Create">
                                    <div class="form-group row">
                                        <label asp-for="CategoryId" class="col-xl-2 col-lg-2 col-md-2 col-sm-2 hidden-xs-up form-control-label">Category</label>
                                        <div class="col-sm-10 col-xs-12">
                                            <div class="input-group">
                                                <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"></select>
                                                <a class="btn btn-outline-primary" href="@Url.Action("Create","PermissionCategories",new {Area = "Identity"})">New Category</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Name" class="col-xl-2 col-lg-2 col-md-2 col-sm-2 hidden-xs-up form-control-label">Name</label>
                                        <div class="col-sm-10 col-xs-12">
                                            <input type="text" class="form-control" placeholder="Name" asp-for="Name">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Description" class="col-xl-2 col-lg-2 col-md-2 col-sm-2 hidden-xs-up form-control-label">Description</label>
                                        <div class="col-sm-10 col-xs-12">
                                            <textarea class="form-control" asp-for="Description"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-xs-push-2 col-xl-push-2 col-lg-push-2 col-md-push-2 col-sm-push-2">
                                            <button type="submit" class="btn btn-success">Create Permission</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>