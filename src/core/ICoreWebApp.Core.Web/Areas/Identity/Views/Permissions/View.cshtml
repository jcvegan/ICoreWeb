@model ICoreWeb.Data.Identity.Model.CorePermission
@{
    Layout = "_Layout";
}
<vc:title header="@Model.Name"></vc:title>
<div class="ks-page-content">
    <div class="ks-page-content-body">
        <div class="ks-nav-body-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-1">
                                <b>ID</b>
                            </div>
                            <div class="col-lg-11">
                                @Model.Id
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-1">
                                <b>Name</b>
                            </div>
                            <div class="col-lg-11">
                                @Model.Name
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-1">
                                <b>Category</b>
                            </div>
                            <div class="col-lg-11">
                                @Model.Category.Name
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-1">
                                <b>Description</b>
                            </div>
                            <div class="col-lg-11">
                                @Model.Description
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="ks-tabs-container ks-tabs-default ks-tabs-with-separator ks-tabs-header-default ks-tabs-vertical">
                            <ul class="nav ks-nav-tabs nav-stacked">
                                <li class="nav-item active">
                                    <a class="nav-link" href="#" data-toggle="tab" data-target="#tab-main-info">Main Info</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#" data-toggle="tab" data-target="#tab-main-roles">Roles assigned</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab-main-info">

                                    <table class="table">
                                        <tbody>
                                        <tr>
                                            <th>ID</th>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <th>Name</th>
                                            <td>@Model.Name</td>
                                        </tr>
                                        <tr>
                                            <th>Description</th>
                                            <td>@Model.Description</td>
                                        </tr>
                                        <tr>
                                            <th>Created On</th>
                                            <td>@Model.CreatedTime</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="tab-pane" id="tab-main-roles"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>